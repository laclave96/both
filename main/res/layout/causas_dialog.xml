<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:src="@drawable/ic_round_close_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/grayDark" />


    <TextView
        android:id="@+id/tagsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/comforta_bold"
        android:text="Ayúdanos a mejorar"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/comforta_bold"
        android:lineSpacingMultiplier="1.30"
        android:text="Nos sería muy útil saber el motivo por el cual eliminaste tu cuenta. Gracias por mejorar nuestra comunidad."
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tagsTitle" />

    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        app:color_checked="@color/redSecundary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exp1"
        app:small_tick="true" />

    <TextView
        android:id="@+id/reason1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:paddingStart="35dp"
        android:text="No he podido hacer match"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check1"
        app:layout_constraintLeft_toLeftOf="@id/check1"
        app:layout_constraintTop_toTopOf="@id/check1" />

    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:color_checked="@color/redSecundary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check1"
        app:small_tick="true" />

    <TextView
        android:id="@+id/reason2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:paddingStart="35dp"
        android:text="Nadie interesante"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check2"
        app:layout_constraintLeft_toLeftOf="@id/check2"
        app:layout_constraintTop_toTopOf="@id/check2" />

    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:color_checked="@color/redSecundary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check2"
        app:small_tick="true" />

    <TextView
        android:id="@+id/reason3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:paddingStart="35dp"
        android:text="Tengo pareja"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check3"
        app:layout_constraintLeft_toLeftOf="@id/check3"
        app:layout_constraintTop_toTopOf="@id/check3" />

    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:color_checked="@color/redSecundary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check3"
        app:small_tick="true" />

    <TextView
        android:id="@+id/reason4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:paddingStart="35dp"
        android:text="No entendi la app"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check4"
        app:layout_constraintLeft_toLeftOf="@id/check4"
        app:layout_constraintTop_toTopOf="@id/check4" />

    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:color_checked="@color/redSecundary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check4"
        app:small_tick="true" />

    <TextView
        android:id="@+id/reason5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:paddingStart="35dp"
        android:text="Tengo que pagar"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check5"
        app:layout_constraintLeft_toLeftOf="@id/check5"
        app:layout_constraintTop_toTopOf="@id/check5" />

    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:color_checked="@color/redSecundary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check5"
        app:small_tick="true" />

    <TextView
        android:id="@+id/reason6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:paddingStart="35dp"
        android:text="Muchos errores en la app"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check6"
        app:layout_constraintLeft_toLeftOf="@id/check6"
        app:layout_constraintTop_toTopOf="@id/check6" />

    <RelativeLayout
        android:id="@+id/addReason"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="1dp"
            android:src="@drawable/ic_round_add_24"
            android:translationZ="1dp"
            app:tint="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/back_circle"
            android:backgroundTint="@color/graySALite" />
    </RelativeLayout>


    <EditText
        android:id="@+id/editReason"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="2dp"
        android:background="@color/transparent"
        android:fontFamily="@font/comforta_bold"
        android:hint="Añade otro motivo aquí"
        android:inputType="textCapSentences"
        android:paddingStart="60dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="@id/addReason"
        app:layout_constraintLeft_toLeftOf="@id/addReason"
        app:layout_constraintTop_toTopOf="@id/addReason" />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35sp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/red_button"
        android:fontFamily="@font/comforta_bold"
        android:paddingStart="40dp"
        android:paddingTop="9dp"
        android:paddingEnd="40dp"
        android:paddingBottom="11dp"
        android:text="Eliminar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/redSecundary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addReason" />

</androidx.constraintlayout.widget.ConstraintLayout>