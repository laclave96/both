<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/quest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/comforta_bold"
        android:lineSpacingMultiplier="1.2"
        android:text="¿Cómo puedo chatear con alguien?"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:chipBackgroundColor="@color/semigray_chip"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/comforta_bold"
        android:lineSpacingMultiplier="1.25"
        android:text="Para chatear con otro usuario debe hacer un match con él. Para esto deben darse Like mutuamente"
        android:textSize="17sp"
        app:chipBackgroundColor="@color/semigray_chip"
        app:layout_constraintTop_toBottomOf="@id/quest" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="16:5"
        app:layout_constraintTop_toBottomOf="@id/answ" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="5dp"
        android:background="@color/grayLite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />

</androidx.constraintlayout.widget.ConstraintLayout>