<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:riv_corner_radius="3dp" />



    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check"
        android:translationZ="1dp"
        app:duration="200"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="end"
        app:color_checked="@color/Blue"
        app:small_tick="true"
        android:layout_width="18dp"
        android:layout_height="18dp"
       />


    <ImageView
        android:id="@+id/icon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera"
        android:tint="@color/white"
        android:translationZ="2dp"
        android:visibility="gone"
        tools:ignore="UseAppTint" />


    <com.insightdev.both.AutoFitTextureView
        android:id="@+id/cameraV"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:translationZ="1dp"
        android:visibility="gone" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/cameraLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graySALite"
        app:riv_corner_radius="5dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/galleryLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_5dp"
        app:riv_corner_radius="5dp" />

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/comforta_bold"
        android:text="GalerÃ­a"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationZ="1dp"
        android:visibility="gone" />


</androidx.cardview.widget.CardView>