<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/drawable"
        app:civ_border="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/iceb_premium" />


    <ImageView
        android:id="@+id/close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/grayDark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:src="@drawable/ic_round_close_24" />

    <TextView
        android:id="@+id/tagsTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/comforta_bold"
        android:text="No te quedan icebreakers"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/exp1"
        app:layout_constraintTop_toBottomOf="@id/tagsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/comforta_bold"
        android:lineSpacingMultiplier="1.3"
        android:text="Has utilizado todos los icebreakers del día de hoy, pásate a premium para obtener más."
        android:textAlignment="center"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/goPrem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35sp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/golden_stroke"
        android:fontFamily="@font/comforta_bold"

        android:paddingStart="25dp"
        android:paddingTop="9dp"
        android:paddingEnd="25dp"
        android:paddingBottom="11dp"
        android:text="Both Premium"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/golden"
        android:textSize="18sp" />


</androidx.constraintlayout.widget.ConstraintLayout>