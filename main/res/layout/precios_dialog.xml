<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prices"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/comforta_bold"
            android:text="Precios"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titlePago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/comforta_bold"
            android:text="Método de pago"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/comforta_bold"
            android:text="Continuar"
            android:textColor="@color/redSecundary"
            android:textSize="17sp"
            app:layout_constraintBaseline_toBaselineOf="@id/title"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/comforta_bold"
            android:text="Atrás"
            android:textColor="@color/redSecundary"
            android:textSize="17sp"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/title"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/back_15dp"
            android:backgroundTint="@color/graySSLite"
            android:padding="1dp"
            app:layout_constraintTop_toBottomOf="@id/title">

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/meses6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="11dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/meses3">


                <TextView
                    android:id="@+id/n6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comforta_bold"
                    android:text="$10"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/cup"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comforta_bold"
                    android:text="/mes"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/n6"
                    app:layout_constraintLeft_toRightOf="@id/n6"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/m6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comforta_bold"
                    android:text="6 meses"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/n6" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/meses3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/back_15dp"
                android:paddingTop="7dp"
                android:paddingBottom="11dp"
                app:layout_constraintLeft_toRightOf="@id/meses6"
                app:layout_constraintRight_toLeftOf="@id/meses1">


                <TextView
                    android:id="@+id/n3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comforta_bold"
                    android:text="$12"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/golden"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/cup3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cup3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comforta_bold"
                    android:text="/mes"
                    android:textAlignment="textStart"
                    android:textColor="@color/golden"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/n3"
                    app:layout_constraintLeft_toRightOf="@id/n3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/m3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comforta_bold"
                    android:text="3 meses"
                    android:textAlignment="center"
                    android:textColor="@color/golden"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/n3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/meses1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="7dp"
                android:paddingBottom="11dp"
                app:layout_constraintLeft_toRightOf="@id/meses3"
                app:layout_constraintRight_toRightOf="parent">


                <TextView
                    android:id="@+id/n1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comforta_bold"
                    android:text="$15"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/cup1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cup1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comforta_bold"
                    android:text="/mes"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/n1"
                    app:layout_constraintLeft_toRightOf="@id/n1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/m1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comforta_bold"
                    android:text="1 mes"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/n1" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/comforta_semibold"
            android:lineSpacingMultiplier="1.2"
            android:text="Todos los precios se expresan en pesos cubanos (CUP)"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/options" />

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/comforta_bold"
            android:lineSpacingMultiplier="1.2"
            android:text=""
            android:textAlignment="center"
            android:textSize="17sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/iPay" />


        <TextView
            android:id="@+id/iPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/golden_stroke"
            android:fontFamily="@font/comforta_bold"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Transferencia bancaria"
            android:textAlignment="gravity"
            android:textColor="@color/golden"
            android:textSize="19sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/promo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.mursaat.extendedtextview.AnimatedGradientTextView
            android:id="@+id/promo_title"
            android:textSize="50sp"
            app:angle="45"
            app:customFont="stylescript_regular.ttf"
            app:simultaneousColors="3"
            android:layout_width="match_parent"
            app:colors="@array/gold_gradient"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="¡Muy pronto!"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:lineSpacingMultiplier="1.30"
            app:layout_constraintTop_toBottomOf="@id/promo_title"
            android:textAlignment="center"
            android:fontFamily="@font/comforta_bold"
            android:textSize="19sp"
            android:text="Both Premium llegará con precios asequibles para todos."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>