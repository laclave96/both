<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tagsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comforta_bold"
        android:text="Bloquear y denunciar"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/comforta_bold"
        android:lineSpacingMultiplier="1.25"
        android:text="Todas las denuncias se realizan de manera anónima. Gracias por ayudar a mejorar nuestra comunidad."
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tagsTitle" />

    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check1"
        app:color_checked="@color/redSecundary"
        app:small_tick="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exp1" />

    <TextView
        android:id="@+id/reason1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="35dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:text="Falsa identidad"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check1"
        app:layout_constraintLeft_toLeftOf="@id/check1"
        app:layout_constraintTop_toTopOf="@id/check1" />

    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:color_checked="@color/redSecundary"
        app:small_tick="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check1" />

    <TextView
        android:id="@+id/reason2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="35dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:text="Contenido inapropiado"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check2"
        app:layout_constraintLeft_toLeftOf="@id/check2"
        app:layout_constraintTop_toTopOf="@id/check2" />

    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:color_checked="@color/redSecundary"
        app:small_tick="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check2" />

    <TextView
        android:id="@+id/reason3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="35dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:text="Estafa o uso comercial"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check3"
        app:layout_constraintLeft_toLeftOf="@id/check3"
        app:layout_constraintTop_toTopOf="@id/check3" />
    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/check4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:color_checked="@color/redSecundary"
        app:small_tick="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check3" />

    <TextView
        android:id="@+id/reason4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="35dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comforta_bold"
        android:text="Menor de edad"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/check4"
        app:layout_constraintLeft_toLeftOf="@id/check4"
        app:layout_constraintTop_toTopOf="@id/check4" />

    <RelativeLayout
        android:id="@+id/addReason"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="1dp"
            android:src="@drawable/ic_round_add_24"
            android:translationZ="1dp"
            app:tint="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/back_circle"
            android:backgroundTint="@color/graySALite" />
    </RelativeLayout>

    <EditText
        android:layout_marginBottom="4dp"
        android:id="@+id/editReason"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="18sp"
        android:inputType="textCapSentences"
        android:layout_marginEnd="20dp"
        android:background="@color/transparent"
        android:fontFamily="@font/comforta_bold"
        android:hint="Añade otro motivo aquí"
        android:textColorHint="@color/black"
        android:paddingStart="60dp"
        android:textColor="@color/black"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="@id/addReason"
        app:layout_constraintLeft_toLeftOf="@id/addReason"
        app:layout_constraintTop_toTopOf="@id/addReason"  />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="35sp"
        android:background="@drawable/red_button"
        android:fontFamily="@font/comforta_bold"
        android:paddingStart="28dp"
        android:paddingTop="8dp"
        android:paddingEnd="28dp"
        android:paddingBottom="10dp"
        android:text="Enviar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/redSecundary"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addReason"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>